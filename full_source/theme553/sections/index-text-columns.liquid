<div class="{% if section.settings.inverted %}inverted{% endif %} index_text_wrapper" {% if section.settings.background_toggle %} style="background-color: {{ section.settings.bg_color }}"{% endif %} {% if section.settings.background_image_toggle %} style="background: url( {{ section.settings.background_image | img_url: '1440x528', crop: 'top' }} );"{% endif %}>
<div class="container">
	{% if section.settings.title.size > 0 %}
		<h2 class="section_heading">{{ section.settings.title | escape }}</h2>
	{% endif %}

	<div class="row">
		{% for block in section.blocks %}
			<div class="col-sm-4 {% if forloop.index == 4 %}clear_left{% endif %}">
				<div class="text_columns__item">
					<div class="item_info text_{{ section.settings.align_text }}">
						{% if block.settings.subtitle.size > 0 %}
							<h5>{{ block.settings.subtitle }}</h5>
						{% endif %}
						{% if block.settings.title.size > 0 %}
							<h3>{{ block.settings.title }}</h3>
						{% endif %}

						{% if block.settings.text.size > 0 %}
							<p>{{ block.settings.text }}</p>
						{% endif %}

						{% if block.settings.button_label.size > 0 and block.settings.button_link.size > 0 %}
							<a class="btn" href="{{ block.settings.button_link }}">
								{{ block.settings.button_label }}
							</a>
						{% endif %}
					</div>
				</div>
			</div>
		{% endfor %}	
	</div>
</div>
</div>
{% schema %}
{
	"name": "Text columns",
	"class": "section section_homepage section_text-columns",
	"max_blocks": 6,	
	"settings": [
		{
			"type": "text",
			"id": "title",
			"label": "Heading",
			"default": "Text columns"
		},
		{
			"type": "select",
			"id": "align_text",
			"label": "Text alignment",
			"default": "left",
			"options": [
				{
					"value": "left",
					"label": "Left"
				},
				{
					"value": "center",
					"label": "Centered"
				},
				{
					"value": "right",
					"label": "Right"
				}
			]
		},
		{
			"type": "checkbox",
			"id": "inverted",
			"label": "Inverted style",
			"default": false
		},
		{
			"type": "checkbox",
			"id": "background_toggle",
			"label": "Show background color",
			"default": true
		},
		{
			"type": "color",
			"id": "bg_color",
			"label": "Background color",
			"default": "#FC4747"
		}
	],
	"blocks": [
		{
			"type": "text_block",
			"name": "Column",
			"settings": [
				{
					"type": "text",
					"id": "subtitle",
					"label": "Heading",
					"default": "Add a title or tagline"
				},
				{
					"type": "text",
					"id": "title",
					"label": "Heading",
					"default": "Add a title or tagline"
				},
				{
					"type": "textarea",
					"id": "text",
					"label": "Text",
					"default": "Share blog posts, products, or promotions with your customers. Use this text to describe products, share details on availability and style, or as a space to display recent reviews or FAQs."
				},
				{
					"type": "text",
					"id": "button_label",
					"label": "Button label"
				},
				{
					"type": "url",
					"id": "button_link",
					"label": "Button link"
				}
			]
		}
	],
	"presets": [
		{
			"name": "Text columns with images",
			"category": "Text",
			"blocks": [
				{
					"type": "text_block"
				},
				{
					"type": "text_block"
				},
				{
					"type": "text_block"
				}
			]
		}
	]
}
{% endschema %}