	"name": "Collections list custom",
	"class": "section section_homepage section_collections_custom",
	"max_blocks": 8,
	"settings": [
		{
			"type": "text",
			"id": "section_title",
			"label": "Heading",
			"default": "Panel"
		}
	],
	"blocks": [
		{
			"type": "featured_collection",
			"name": "Collection",
			"settings": [
				{
					"label": "Collection",
					"id": "item_collection",
					"type": "collection"
				},
				{
					"type": "image_picker",
					"id": "collection_image",
					"label": "Collection image",
					"info": "Image size 350x220px."
				},
				{
					"type": "textarea",
					"id": "collection_title",
					"label": "Collection sub title"
				}
			]
		}
	],
	"presets": [
		{
			"name": "Collections list custom",
			"category": "Collections",
			"settings": {

			},
			"blocks": [
				{
					"type": "featured_collection"
				},
				{
					"type": "featured_collection"
				},
				{
					"type": "featured_collection"
				}
			]
		}
	]
}
{% endschema %}

